.accounts-table
  %div(ng-repeat="(category, accounts) in groups" class="{{category | lowercase}}-list")
    %h2 {{category}}
    %ul
      %li(ng-repeat="account in accounts")
        %h3(ng-show="account.firstInCategory") {{account.category}}
        %a(href="#/account/{{account.id}}") {{account.name}}
        %span.balance {{account.balance_cents | centsToDollars | currency}}
