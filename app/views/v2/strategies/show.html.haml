= hidden_field_tag :id, @strategy.id
= hidden_field_tag :value, @strategy.value(@bank_entry)
%h3= @account.name
-if @bank_entry
  %div= strategy_dot(@strategy, @bank_entry, ammount: @entry_ammount, text: true)

- unless @strategy.new_record?
  %div= strategy_title(@strategy)
  - if @strategy.notes.present?
    .notes= @strategy.notes
  - unless @bank_entry.nil? || @entry_ammount == @strategy.value(@bank_entry)
    = link_to "#", class: 'use-strategy' do
      Use Strategy
      = currency @strategy.value(@bank_entry), 'ammount', 'span'

= link_to "Set Strategy", new_v2_strategy_path(bank_entry_id: @bank_entry.try(:id), account_id: @account.id, entry_ammount: @entry_ammount)
