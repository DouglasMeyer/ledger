%html(ng-app="Ledger")
  %head
    %title Ledger
    = stylesheet_link_tag    "normalize", "angular", :media => "all"
    = javascript_include_tag "angular_app"
    = csrf_meta_tags
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    %meta(name="google" value="notranslate")

  -# TODO: remove classes
  %body(class="#{controller_name} #{action_name}")
    .navigation(ng-controller="NavigationCtrl")
      %a(href="#/accounts" ng-class="{'s-current': locationPath == '/accounts'}") Accounts
      %a(href="#/entries"  ng-class="{'s-current': locationPath == '/entries'}") Entries

      %p last update #{Time.now.strftime "%-m/%-d %-I%P"}

    .body= yield
