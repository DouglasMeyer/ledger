%h1 Accounts

= link_to "New Account", new_account_path

.accounts
  %table.assets
    %caption Assets
    - @accounts.assets.each do |account|
      %tr
        %td= account.name
        %td.currency= number_to_currency account.balance_cents / 100

  %table.liabilities
    %caption Liabilities
    - @accounts.liabilities.each do |account|
      %tr
        %td= account.name
        %td.currency= number_to_currency account.balance_cents / 100
